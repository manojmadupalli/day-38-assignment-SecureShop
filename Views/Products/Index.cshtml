
@model IEnumerable<SecureShop.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h2 class="mb-3">Products</h2>

<form class="row g-2 mb-4" method="get" asp-action="Index">
    <div class="col-sm-8 col-md-6">
        <input name="q" class="form-control" value="@Context.Request.Query["q"]" placeholder="Search products..." />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var p in Model)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <img src="@p.ImageUrl" class="card-img-top" alt="@p.Name" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@p.Name</h5>
                <p class="card-text flex-grow-1">@p.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-semibold">â‚¹ @p.Price</span>
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@p.Id">View</a>
                </div>
            </div>
        </div>
    </div>
}
</div>

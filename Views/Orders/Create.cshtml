
@model SecureShop.Controllers.OrdersController.CreateOrderVm
@{
    ViewData["Title"] = "Place Order";
}
<h2 class="mb-3">Place Order</h2>
<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductId" />
            <div class="mb-3">
                <label class="form-label">Product</label>
                <input class="form-control" value="@Model.ProductName" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label">Price</label>
                <input class="form-control" value="@Model.Price" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ShippingAddress" class="form-label"></label>
                <textarea asp-for="ShippingAddress" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Confirm Order</button>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
